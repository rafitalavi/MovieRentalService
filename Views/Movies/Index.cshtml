@model IEnumerable<MovieWala.Models.Movie>

@{
    ViewBag.Title = "Movies";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>Movies</h2>
<a asp-controller="Movies" asp-action="New" class="btn btn-warning mt-3 mb-3">Add New Movie</a>
<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>Movie</th>
            <th>Genre</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var movie in Model)
        {
            <tr>
                
              
                <td>@Html.ActionLink(movie.Name, "Details", "Movies", new { id = movie.Id }, null)</td>
                <td>@movie.Genre.Name</td>
                <td>
                    @Html.ActionLink("Edit", "Edit", "Movies", new { id = movie.Id }, new { @class = "btn btn-danger" })
                    @Html.ActionLink("Details", "Details", "Movies", new { id = movie.Id }, new { @class = "btn btn-info" })
                </td>
            </tr>
        }
    </tbody>
</table>